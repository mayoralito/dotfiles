#!/bin/bash
#
# battery-status
#
# A quick little indicator for battery status on your Mac laptop, suitable for
# display in your prompt.

if test ! "$(uname)" = "Darwin"
  then
  printf ""
  exit 0
fi

battstat=$(pmset -g batt)
time_left=$(echo $battstat |
  tail -1 |
  cut -f2 |
  awk -F"; " '{print $3}' |
  cut -d' ' -f1
)

if [[ $(pmset -g ac) == *"No adapter attached."* ]]
then
  emoji='ğŸ”‹'
else
  emoji='ğŸ”Œ'
fi

if [[ $time_left == *"(no"* || $time_left == *"not"* ]]
then
  time_left='âŒ›ï¸ '
fi

if [[ $time_left == *"0:00"* ]]
then
  time_left='âš¡ï¸ '
fi

# Current baterry %
current_battery_percentage=$(pmset -g batt | grep -Eo "\d+%" | cut -d% -f1)
current_battery_percentage="$current_battery_percentage%"

printf "\033[1;92m%s (%s left - %s%%) \033[0m\n" "$emoji" "$time_left" "$current_battery_percentage"
